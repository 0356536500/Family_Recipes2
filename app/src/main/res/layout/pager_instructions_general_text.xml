<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_pager_layout">

    <TextView
        android:id="@+id/pager_instructions_general_textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/instructions_medium_margins"
        android:layout_marginEnd="@dimen/instructions_medium_margins"
        android:layout_marginTop="@dimen/instructions_medium_margins"
        android:elevation="@dimen/instructions_elevation_element"
        android:textSize="@dimen/instructions_text_large"
        android:textColor="?attr/textColorMain"
        android:fontFamily="@font/open_sans_extrabold"
        android:textAlignment="center"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/pager_instructions_general_textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/instructions_medium_margins"
        android:layout_marginEnd="@dimen/instructions_medium_margins"
        android:layout_marginTop="@dimen/instructions_large_margins"
        android:elevation="@dimen/instructions_elevation_element"
        android:background="@drawable/background_pager_element"
        android:textSize="@dimen/instructions_text_medium"
        android:textColor="?attr/textColorSecond"
        android:fontFamily="@font/open_sans_bold"
        android:layout_below="@id/pager_instructions_general_textView1"/>

    <TextView
        android:id="@+id/pager_instructions_general_textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/instructions_medium_margins"
        android:layout_marginEnd="@dimen/instructions_medium_margins"
        android:layout_marginTop="@dimen/instructions_large_margins"
        android:elevation="@dimen/instructions_elevation_element"
        android:background="@drawable/background_pager_element"
        android:textSize="@dimen/instructions_text_medium"
        android:textColor="?attr/textColorSecond"
        android:fontFamily="@font/open_sans_bold"
        android:layout_below="@id/pager_instructions_general_textView2"/>

</RelativeLayout>