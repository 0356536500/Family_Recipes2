<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    >

    <include layout="@layout/toolbar"
        android:id="@+id/register_include_toolbar" />

    <EditText
        android:padding="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/register_username"
        android:layout_below="@id/register_include_toolbar"
        android:layout_marginTop="36dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Username"
        android:layout_toRightOf="@+id/register_imageView_username"
        android:layout_toEndOf="@+id/register_imageView_username" />

    <EditText
        android:padding="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/register_fullname"
        android:hint="Full Name"
        android:layout_below="@+id/register_username"
        android:layout_alignRight="@+id/register_username"
        android:layout_alignEnd="@+id/register_username"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/register_imageView_username"
        android:layout_toEndOf="@+id/register_imageView_username" />

    <EditText
        android:padding="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/register_email"
        android:layout_below="@+id/register_fullname"
        android:layout_alignRight="@+id/register_fullname"
        android:layout_alignEnd="@+id/register_fullname"
        android:hint="Email"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/register_fullname"
        android:layout_alignStart="@+id/register_fullname" />

    <EditText
        android:padding="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textVisiblePassword"
        android:ems="10"
        android:id="@+id/register_password"
        android:hint="Confirm Password"
        android:layout_below="@+id/register_email"
        android:layout_alignRight="@+id/register_email"
        android:layout_alignEnd="@+id/register_email"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/register_email"
        android:layout_alignStart="@+id/register_email" />

    <Button
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:id="@+id/register_button"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/register_password"
        android:layout_below="@+id/register_password"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_imageView_username"
        android:src="@drawable/circledude"
        android:layout_alignBottom="@+id/register_username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/register_username" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_imageView_fullname"
        android:src="@drawable/circlea"
        android:layout_alignTop="@+id/register_fullname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/register_fullname" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_imageView_email"
        android:src="@drawable/circleemail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/register_email"
        android:layout_alignTop="@+id/register_email" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_imageView_password"
        android:src="@drawable/circlelock"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/register_password"
        android:layout_alignTop="@+id/register_password" />

</RelativeLayout>
