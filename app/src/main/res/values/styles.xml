    <style name="ActionBarTheme.Light" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/dark_background</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:colorPrimary">@color/md_grey_900</item>
        <item name="android:colorPrimaryDark">@color/black</item>

        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@android:color/holo_green_light</item>
        <!-- Tints the input fields like checkboxes and text fields -->
        <item name="colorAccent">@color/black</item>
        <!-- Applies to views in their normal state. -->
        <!-- Back arrow and menu 3 dots -->
        <item name="colorControlNormal">@color/black</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">@color/black</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">@color/black</item>

        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->
        <!--
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        -->
        <!-- THIS is where you can color the arrow! -->
        <!--<item name="colorControlNormal">@color/md_blue_300</item>-->
    </style>

    <style name="ActionBarTheme.Dark" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/grey_100</item>
        <item name="android:backgroundTint">@color/grey_500</item>
        <item name="colorPrimary">@color/grey_100</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@android:color/holo_green_light</item>
        <!-- Tints the input fields like checkboxes and text fields -->
        <item name="colorAccent">@color/white</item>
        <!-- Applies to views in their normal state. -->
        <item name="colorControlNormal">@color/white</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">@color/white</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">@color/white</item>

        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->
