<resources>

    <!-- Base application theme - Default - Light -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- toolbar colors and themes -->
        <item name="material_theme">@style/Theme.MaterialComponents.Light.NoActionBar</item>
        <item name="toolbar_theme">@style/ActionBarTheme.Light</item>
        <item name="toolbarBackgroundPrimary">@color/white</item>
        <item name="toolbarBackgroundSecondary">@color/logo_background_darker</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <!-- SearchFilter -->
        <item name="searchFilterBackgroundColor">?attr/toolbarBackgroundPrimary</item>
        <item name="searchFilterTextColor">@color/search_filter_text_light</item>
        <item name="searchFilterCustomTextColor">@color/search_filter_text_light</item>

        <!-- collapsedToolbarLayout -->
        <item name="collapsedIconsColor">@color/md_grey_900</item>
        <item name="expandedIconsColor">@color/black</item>

        <item name="colorControlHighlight">?attr/toolbarBackgroundSecondary</item>
        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/grey_300</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">@color/grey_600</item>

        <!--<item name="android:backgroundTint">@color/white</item>-->
        <item name="android:textColorPrimary">@color/grey_700</item>
        <item name="android:textColorSecondary">@color/grey_500</item>

        <item name="backgroundColor">@color/white</item>
        <item name="textColorMain">@color/grey_700</item>
        <item name="textColorSecond">@color/grey_500</item>

        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle.Light</item>
    </style>

    <!-- Base application theme - Dark -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <!-- toolbar colors and themes -->
        <item name="material_theme">@style/Theme.MaterialComponents.Light.DarkActionBar</item>
        <item name="toolbar_theme">@style/ActionBarTheme.Dark</item>
        <item name="toolbarBackgroundPrimary">@color/grey_500</item>
        <item name="toolbarBackgroundSecondary">@color/logo_foreground</item>

        <item name="colorPrimary">@color/grey_100</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <!-- SearchFilter -->
        <item name="searchFilterBackgroundColor">@color/md_grey_200</item>
        <item name="searchFilterTextColor">@color/search_filter_text_light</item>
        <item name="searchFilterCustomTextColor">@color/grey_100</item>

        <!-- collapsedToolbarLayout -->
        <item name="collapsedIconsColor">@color/grey_100</item>
        <item name="expandedIconsColor">@color/black</item>

        <item name="colorControlHighlight">?attr/toolbarBackgroundSecondary</item>
        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">?android:colorPrimary</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/grey_300</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">@color/white</item>

        <!--<item name="android:backgroundTint">@color/dark_theme_background</item>-->
        <item name="android:textColorPrimary">@color/grey_100</item>
        <item name="android:textColorSecondary">@color/grey_300</item>

        <item name="backgroundColor">@color/dark_theme_background</item>
        <item name="textColorMain">@color/grey_100</item>
        <item name="textColorSecond">@color/grey_100</item>

        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle.Dark</item>
    </style>


    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>



    <style name="ActionBarTheme.Light" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- android:textColorPrimary is the color of the title message in the Toolbar  -->
        <item name="android:textColorPrimary">@color/dark_background</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:colorPrimary">@color/md_grey_900</item>
        <item name="android:colorPrimaryDark">@color/black</item>

        <!-- actionMenuTextColor is the color of the message of action (menu) items  -->
        <item name="actionMenuTextColor">@android:color/holo_green_light</item>
        <!-- Tints the input fields like checkboxes and message fields -->
        <item name="colorAccent">@color/black</item>
        <!-- Applies to views in their normal state. -->
        <!-- Back arrow and menu 3 dots -->
        <item name="colorControlNormal">@color/black</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">@color/black</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">@color/black</item>

        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->
        <!--
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        -->
        <!-- THIS is where you can color the arrow! -->
        <!--<item name="colorControlNormal">@color/md_blue_300</item>-->
    </style>

    <style name="ActionBarTheme.Dark" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- android:textColorPrimary is the color of the title message in the Toolbar  -->
        <item name="android:textColorPrimary">@color/grey_100</item>
        <item name="android:backgroundTint">@color/grey_500</item>
        <item name="colorPrimary">@color/grey_100</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- actionMenuTextColor is the color of the message of action (menu) items  -->
        <item name="actionMenuTextColor">@android:color/holo_green_light</item>
        <!-- Tints the input fields like checkboxes and message fields -->
        <item name="colorAccent">@color/white</item>
        <!-- Applies to views in their normal state. -->
        <item name="colorControlNormal">@color/white</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">@color/white</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">@color/white</item>

        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->
        <!--
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        -->
        <!-- THIS is where you can color the arrow! -->
        <!--<item name="colorControlNormal">@color/md_blue_300</item>-->
    </style>


    <style name="AppTheme.Launcher" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimary">@color/grey_500</item>
    </style>




    <style name="AppTheme.ActionBarTheme.Dark" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- THIS is where you can color the arrow! -->
        <item name="colorControlNormal">@color/grey_300</item>
    </style>


    <style name="AppTheme.PopupOverlay.Light" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle.Light</item>
    </style>

    <!--<style name="AppTheme.PopupOverlay.Dark" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/dark_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle.Dark</item>
    </style>-->

    <!--<style name="switchTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/dark_background</item>
    </style>-->

    <style name="MyDrawerArrowToggle.Light" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/black</item>
    </style>

    <style name="MyDrawerArrowToggle.Dark" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <style name="RecyclerTheme" parent="AppTheme.Light">
        <item name="android:colorEdgeEffect">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/toolbar_background</item>
    </style>

